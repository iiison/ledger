{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
